<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="80dp"
    android:background="?android:attr/colorBackground"
    android:padding="8dip">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toEndOf="@+id/icon"
        android:layout_toRightOf="@+id/icon"
        android:orientation="vertical">

        <TextView
            android:id="@+id/title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignWithParentIfMissing="true"
            android:layout_toEndOf="@+id/icon"
            android:layout_toRightOf="@+id/icon"
            android:gravity="center_vertical"
            android:text="Example application"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/address_3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_toRightOf="@+id/icon"
            android:ellipsize="marquee"
            android:gravity="start"
            android:maxLines="1"
            android:text="Endereco"
            android:textAlignment="viewStart"
            android:textSize="14sp"
            android:textStyle="italic"
            android:visibility="visible" />

        <TextView
            android:id="@+id/precoWishlist"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_toEndOf="@+id/address_3"
            android:layout_toRightOf="@+id/address_3"
            android:ellipsize="marquee"
            android:gravity="end"
            android:maxLines="1"
            android:text="R$200.00"
            android:textAlignment="viewStart"
            android:textColor="@color/colorMoney"
            android:textSize="16sp"
            android:textStyle="bold|italic"
            android:visibility="visible" />
    </LinearLayout>

    <ImageView
        android:id="@+id/removeWishlist"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        app:srcCompat="@android:drawable/ic_delete" />

    <ImageView
        android:id="@+id/icon"
        android:layout_width="60dp"
        android:layout_height="fill_parent"
        android:layout_alignParentBottom="true"
        android:layout_alignParentTop="true"
        android:layout_marginRight="6dip"
        android:contentDescription="TODO"
        android:scaleType="centerCrop"
        android:src="@android:drawable/star_big_on" />

    <TextView
        android:id="@+id/vaga_preenchida"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toEndOf="@+id/icon"
        android:layout_toLeftOf="@+id/imageView3"
        android:layout_toRightOf="@+id/icon"
        android:ellipsize="marquee"
        android:maxLines="1"
        android:text="Vaga jÃ¡ preenchida"
        android:textAllCaps="false"
        android:textSize="18sp"
        android:textStyle="italic"
        android:visibility="invisible" />

</RelativeLayout>